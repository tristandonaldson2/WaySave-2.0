<body>
  <!-- Splash Screen -->
  <div id="splash">
    <img src="logo.png" alt="WaySave Logo">
    <h1>WaySave</h1>
  </div>

  <!-- Main App -->
  <div id="mainApp">
    <!-- Survey Container -->
    <div id="surveyContainer">
      <h2>Tell us about yourself</h2>
      <input type="text" id="name" placeholder="Your Name">
      <select id="ageGroup">
        <option value="">Select Age Group</option>
        <option value="13-17">13–17</option>
        <option value="18-24">18–24</option>
        <option value="25-34">25–34</option>
        <option value="35+">35+</option>
      </select>
      <select id="borough">
        <option value="">Select Borough</option>
        <option value="Brooklyn">Brooklyn</option>
        <option value="Bronx">Bronx</option>
        <option value="Manhattan">Manhattan</option>
        <option value="Queens">Queens</option>
        <option value="Staten Island">Staten Island</option>
      </select>
      <label>What are you into?</label>
      <div id="interests">
        <label><input type="checkbox" value="Basketball Courts"> Basketball Courts</label><br>
        <label><input type="checkbox" value="Restaurants"> Restaurants</label><br>
        <label><input type="checkbox" value="Arcades"> Arcades</label><br>
        <label><input type="checkbox" value="Thrift Shops"> Thrift Shops</label><br>
        <label><input type="checkbox" value="Rooftop Lounges"> Rooftop Lounges</label><br>
        <!-- More can be added -->
      </div>
      <button class="button" onclick="submitSurvey()">Discover Activities</button>
    </div>

    <!-- Content placeholder: Activities, Live Events, Savie, etc. -->
    <div id="content" style="margin-top: 2rem;"></div>
  </div>

  <script>
    window.onload = () => {
      setTimeout(() => {
        document.getElementById('splash').style.opacity = 0;
        setTimeout(() => {
          document.getElementById('splash').style.display = 'none';
          document.getElementById('mainApp').style.display = 'block';
        }, 1000);
      }, 2200);
    };

    function submitSurvey() {
      const name = document.getElementById('name').value;
      const age = document.getElementById('ageGroup').value;
      const borough = document.getElementById('borough').value;
      const checked = document.querySelectorAll('#interests input:checked');
      const interests = Array.from(checked).map(cb => cb.value);

      document.getElementById('surveyContainer').style.display = 'none';
      loadActivities(name, borough, interests);
    }

    function loadActivities(name, borough, interests) {
      const content = document.getElementById('content');
      const welcome = document.createElement('h2');
      welcome.innerText = `Hi ${name}, here’s what’s happening in ${borough}!`;
      content.appendChild(welcome);

      const section = document.createElement('div');
      section.innerHTML = `<p>(Activities for: ${interests.join(', ')})</p>`;
      content.appendChild(section);

      // Placeholder for upcoming sections (to be filled in next update)
    }
  </script>
