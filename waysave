  <script>
    // Add Sponsored Card Example
    const activityGrid = document.getElementById('activityGrid');

    // Sponsored card HTML
    const sponsoredCardHTML = `
      <div class="activity-card sponsored" data-category="amusement" onclick="expandCard(this)">
        <img src="https://source.unsplash.com/400x300/?amusement,nyc" alt="BounceZone Trampoline Park">
        <h3>BounceZone Trampoline Park</h3>
        <div class="activity-details">
          <p><strong>Address:</strong> 123 Jump St, Queens, NY</p>
          <p>Fun trampoline park with dodgeball and foam pits. Great for groups!</p>
          <a href="https://maps.apple.com/?address=123+Jump+St,Queens,NY" target="_blank">Get Directions</a>
          <div class="comments">
            <strong>User Comments:</strong>
            <p>"So much fun for kids and adults!" â€“ @jumpfan</p>
            <p>"Perfect for birthday parties." â€“ @queenstramp</p>
          </div>
        </div>
      </div>
    `;

    // Insert sponsored card at start of grid
    activityGrid.insertAdjacentHTML('afterbegin', sponsoredCardHTML);

    // Banner ad insertion
    const bannerAdHTML = `<div class="banner-ad">ðŸš¨ Sponsored: Check out BounceZone Trampoline Park in Queens!</div>`;
    activityGrid.insertAdjacentHTML('beforebegin', bannerAdHTML);

    // Filter function for activity cards
    function filterActivities(category) {
      const cards = document.querySelectorAll('.activity-card');
      cards.forEach(card => {
        if (category === 'all' || card.dataset.category === category) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }
  </script>
